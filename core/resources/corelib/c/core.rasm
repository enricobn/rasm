type RasmPointer(false, "void *");

pub native exitMain(status: i32) /{
    exit($status);
}/

pub native argc() -> i32 /{
    return argc_;
}/

pub native argv(i: i32) -> Option<str> /{
    if (i >= argc_) {
        $enumDeclaration(result_)
        $enumVariantDeclaration(v_, None)
        result_->variant_num = 1;
        result_->variant = v_;
        return result_;
    } else {
        return
        $call(Option::Some, argv_[$i]:str)
        ;
    }

}/

