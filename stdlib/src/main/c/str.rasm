pub inline native isAlpha(c: char) -> bool /{
    (($c[0] >= 'a' && $c[0] <= 'z') || ($c[0] >= 'A' && $c[0] <= 'Z'))
}/

pub inline native isNumber(c: char) -> bool /{
    ($c[0] >= '0' && $c[0] <= '9')
}/