pub native print(file: File, b: bool) -> Option<IOError> /{
    $include(<stdio.h>)
    $include(<errno.h>)

    errno = 0;
    if ($b) {
        fprintf(file, "true");
    } else {
        fprintf(file, "false");
    }

    return $call(optIOError);
}/

