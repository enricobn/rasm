asm lessOrEqual(a: i32, b: i32) -> i32[eax] /{
    push    ebx
    push    ecx
    mov     eax,1 ; true
    mov     ebx,[ebp+4+4] ; a
    mov     ecx,[ebp+4+8] ; b
    cmp     ebx,ecx
    jbe     .finished ; Jump if Below or Equal (unsigned comparison)
    mov     eax,0 ; false
.finished:
    pop     ecx
    pop     ebx
}/