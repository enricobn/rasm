struct Loop<T> {
    update: fn(i32, T) -> Option<T>,
    render: fn(T) -> ()
}

struct Model {
    x: i32,
    y: i32
}

let l = Loop(
    { time, model ->
        if(greater(time, 5),
            { -> NoneModel();},
            { ->
                let x = x(model);
                let y = y(model);
                Option::Some(Model(add(x, 1), add(y, 1)));
            });
    },
    { model ->
        let x = x(model);
        let y = y(model);
        print(x);
        print(",");
        println(y);
    }
);

loop(0, Model(0, 0), l);

fn loop<T>(time: i32, model: T, l: Loop<T>) {
    let result = l.update(time, model);
    match(result, { newModel -> l.render(newModel); loop(add(time, 1), newModel, l);}, { -> });
}

fn NoneModel() -> Option<Model> {
    Option::None();
}