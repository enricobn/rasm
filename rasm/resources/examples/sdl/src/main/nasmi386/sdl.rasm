/*
SDL C types:

typedef union{
  Uint8 type;
  SDL_ActiveEvent active;
  SDL_KeyboardEvent key;
  SDL_MouseMotionEvent motion;
  SDL_MouseButtonEvent button;
  SDL_JoyAxisEvent jaxis;
  SDL_JoyBallEvent jball;
  SDL_JoyHatEvent jhat;
  SDL_JoyButtonEvent jbutton;
  SDL_ResizeEvent resize;
  SDL_ExposeEvent expose;
  SDL_QuitEvent quit;
  SDL_UserEvent user;
  SDL_SysWMEvent syswm;
} SDL_Event;

typedef struct{
  Uint8 type;
  Uint8 state;
  SDL_keysym keysym;
} SDL_KeyboardEvent;

typedef struct{
  Uint8 scancode;
  SDLKey sym;
  SDLMod mod;
  Uint16 unicode;
} SDL_keysym;

*/
pub native keyEvent() -> Option<KeyEvent> /{
    push    ebx

    $call(rasmalloc, 56, " for temp mem for sdl keyEvent")
    $call(addRef, eax, "temp mem for sdl keyEvent")
    push    eax

    mov     dword  ebx, [eax]
    $ccall(SDL_PollEvent, [eax]);
    cmp     eax, 0
    je      .noKey
    mov     dword eax,[ebx] ; here we have the event type
    cmp     eax, 768        ; keyDown
    jne     .noKeyDown
    $call(KeyEvent, [ebx + 16], [_enum_sdl_sdl_KeyState_Down]: KeyState)
    $addRef(eax:KeyEvent)
    push    eax
    $call(Some, eax: KeyEvent)
    pop     ebx
    $deref(ebx:KeyEvent)
    jmp     .end
.noKeyDown:
    cmp     eax, 769        ; keyUp
    jne     .noKey
    $call(KeyEvent, [ebx + 16], [_enum_sdl_sdl_KeyState_Up]: KeyState)
    $addRef(eax:KeyEvent)
    push    eax
    $call(Some, eax: KeyEvent)
    pop     ebx
    $deref(ebx:KeyEvent)
    jmp     .end
.noKey:
    mov     dword eax, [_enum_stdlib_option_Option_None]
.end:
    pop     ebx
    $call(freeMem, ebx)

    pop     ebx
}/

